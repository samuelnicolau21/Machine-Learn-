# include <stdio.h>
# include <stdlib.h>
# include <time.h>


void insert (int *pv, int x, int n, int m){
        int aux, aux2, fim=0;
       
        if(n<m){//se tem espaço na lista
           
            for(int i=0;i<n+1;i++){
                if(pv[i]>=x && fim!=1){
                    aux=pv[i];
                    pv[i]=x;
                    fim=1;
                }
                else if(fim==1){
                    aux2=aux;
                    aux=pv[i];
                    pv[i]=aux2;
                   
                   
                }
                printf("%d ",pv[i]);
               
            }
           
        }
        else {printf("lista cheia\n");}
           
        }
       
void extrai (int *pv, int x, int n, int m){
    int fim=0, i=0;
    if(n>0){//se tem elementos na lista
   
    for(i=0;i<n;i++){
       
        if(pv[i]==x || fim==1){
            pv[i]=pv[i+1];
            fim=1;
            printf("%d ",pv[i]);
        }
    }
    }
    else {printf("O elemento não está na lista");}
   


}

int main(){

int m, n;
printf("Digite a capacidade maxima do vetor e em seguida\ndigite quantos elementos ele terá inicialmente\n");
scanf("%d%d",&m,&n);

int l[m], *pv, x;
pv=&l[0];

for(int i=0;i<n;i++){
    getchar();
    srand(time(NULL));
    pv[i]=rand()%100;
    printf("l[i]=%d ",l[i]);
   
}

printf("\nDigite o elemento que deseja inserir na lista\n");
scanf("%d",&x);
insert(pv, x, n, m);
printf("Digite o elemento que deseja extrair da lista\n");
scanf("%d",&x);
extrai (pv, x, n, m);
   
    return 0;
}
