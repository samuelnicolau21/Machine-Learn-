h) Faça um programa que calcule e mostre a tabuada de um número digitado pelo usuário.

	Portugol 

	TABUADA
	DECLARE n,rm1,rm2,rm3,rm4,rm5,rm6,rm7,rm8,rm9,rm10, rm11 NUMÉRICO;
	ESCREVA "DIGITE UM NÚMERO";
	LEIA N1;
	rm1=n*0;
	rm2=n*1;
	rm3=n*2;
	rm4=n*3;
	rm5=n*4;
	rm6=n*5;
	rm7=n*6;
	rm8=n*7;
	rm9=n*8;
	rm10=n*9;
	rm11=n*10;
	ESCREVA "0*",n"=",rm1;
	ESCREVA "1*",n"=",rm2"\n";
	ESCREVA "2*",n"=",rm3"\n";
	ESCREVA "3*",n"=",rm4"\n";
	ESCREVA "4*",n"=",rm5"\n";
	ESCREVA "5*",n"=",rm6"\n";
	ESCREVA "6*",n"=",rm7"\n";
	ESCREVA "7*",n"=",rm8"\n";
	ESCREVA "8*",n"=",rm9"\n";
	ESCREVA "9*",n"=",rm10"\n";	
	ESCREVA "10*",n"=",rm11"\n";
	FIM_ALGORÍTIMO
...................................................................................................
	C/C++
	
	#include <stdio.h>
	
	int main(void)
{
	int n,rm1,rm2,rm3,rm4,rm5,rm6,rm7,rm8,rm9,rm10, rm11;
	printf("\nDIGITE UM NÚMERO\n");
	scanf("%d",&n);
	rm1=n*0;
	rm2=n*1;
	rm3=n*2;
	rm4=n*3;
	rm5=n*4;
	rm6=n*5;
	rm7=n*6;
	rm8=n*7;
	rm9=n*8;
	rm10=n*9;
	rm11=n*10;
	printf("0*%d",n);
	printf("=%d",rm1);
	printf("\n");
	printf("1*%d",n);
	printf("=%d",rm2);
	printf("\n");
	printf("2*%d",n);
	printf("=%d",rm3);
	printf("\n");
	printf("3*%d",n);
	printf("=%d",rm4);
	printf("\n");
	printf("4*%d",n);
	printf("=%d",rm5);
	printf("\n");
	printf("5*%d",n);
	printf("=%d",rm6);
	printf("\n");
	printf("6*%d",n);
	printf("=%d",rm7);
	printf("\n");
	printf("7*%d",n);
	printf("=%d",rm8);
	printf("\n");
	printf("8*%d",n);
	printf("=%d",rm9);
	printf("\n");
	printf("9*%d",n);
	printf("=%d",rm10);
	printf("\n");
	printf("10*%d",n);
	printf("=%d",rm11);
	printf("\n");
	return 0;	
}

