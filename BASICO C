g) Faça um programa que recebe o valor do salário mínimo e o valor do salário de um
funcionário, calcule e mostre a quantidade de salários mínimos que esse funcionário
recebe.
	
	Portugol
	
	SALÁRIOS
	DECLARE sm,s,ns NUMÉRICO;
	ESCREVA "DIGITE O VALOR DO SEU SALÁRIO";
	LEIA s;
	ESCREVA "DIGITE O VALOR DE UM SALÁRIO MÍNIMO"
	LEIA sm;
	ns=s/sm;
	ESCREVA ns, "É O NÚMERO DE SALÁRIOS MÍNIMOS QUE VOCÊ RECEBE";
	FIM_ALGORÍTIMO
...................................................................................................
	C/C++

	#include <stdio.h>

	int main(void)
{
	float sm, s, ns;
	printf("\nDIGITE O VALOR DO SEU SALÁRIO\n");
	scanf("%f",&s);
	printf("\nESCREVA O VALOR DE UM SALÁRIO MÍNIMO\n");
	scanf("%f",&sm);
	ns=s/sm;
	printf( "\nO NÚMERO DE SALÁRIOS MÍNIMOS QUE VOCÊ RECEBE É \n %f",ns);
	return 0;

}
