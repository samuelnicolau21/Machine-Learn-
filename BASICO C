i) Faça um programa que recebe o ano de nascimento de uma pessoa e o ano atual, calcule
e mostre:

• A idade dessa pessoa em anos;
• A idade dessa pessoa em meses;
• A idade dessa pessoa em dias;
• A idade dessa pessoa em semanas;

	 Portugol 

 	DECLARE n,a,ia,im,id,is NUMÉRICO;
	ESCREVA " DIGITE O ANO EM QUE VOCÊ NASCEU ";
	LEIA n;
	ESCREVA "DIGITE O ANO ATUAL";
	LEIA a;
	ia= a-n;
	im= ia*12;
	id= {[(ia/4)*366] + [ia*(3/4)]*365};             
	is= id/7;
	ESCREVA " SUA IDADE EM ANOS É ", ia;             
	ESCREVA "SUA IDADE EM MESES É ", im;               
	ESCREVA "SUA IDADE EM SEMANAS É ", is;              
	ESCREVA "SUA IDADE EM DIAS É " , id;
	FIM_ALGORÍTIMO

...................................................................................................
	C/C++


	#include <stdio.h>

	int main(void)
{
	int n, a, ia, im, id, is;
	printf("\nDIGITE O ANO EM QUE VOCÊ NASCEU\n");
	scanf("%d",&n);
	printf("\nDIGITE O ANO ATUAL\n");
	scanf("%d",&a);
	ia=a-n;
	im= ia*12;
	id= ia*365;
	is= id/7;
	printf("\nSUA IDADE EM ANOS É %d", ia);
	printf("\nSUA IDADE EM MESES É %d", im);
	printf("\nSUA IDADE EM SEMANAS É %d", is);
	printf("\nSUA IDADE EM DIAS É %d", id);
	return 0;
}

