f) Faça um programa que calcule e mostre a área de um quadrado.

	Portugol
	
	ÁREA_DO_QUADRADO
	DECLARE a,l NUMÉRICO;
	ESCREVA "DIGITE O VALOR DO LADO DO QUADRADO";
	LEIA l;
	a= l^2;
	ESCREVA "A ÁREA DO QUADRADO É ", a;
	FIM_ALGORÍTIMO

...................................................................................................
	C/C++
	#include <stdio.h>

	int main(void)
{

	float a, l;
	printf("\nDIGITE O VALOR DO LADO DO QUADRADO\n");
	scanf("%f",&l);
	a= l*l;
	printf("\nA ÁREA DO QUADRADO É %f",a);
	return 0;

}


