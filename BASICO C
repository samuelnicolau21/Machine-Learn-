d) Faça um programa que receba o peso de uma pessoa em quilos, calcule e mostre esse
peso em gramas.


	Portugol
	
	PESO_EM_QUILOS
	DECLARE pg,pk, NUMÉRICO;
	ESCREVA "DIGITE SEU PESO EM QUILOS";
	LEIA pk;
	pg= pk*1000;
	ESCREVA "SEU PESO EM GRAMAS É", pg;
	FIM_ALGORÍTIMO
...................................................................................................

	C/C++
	

	#include <stdio.h>

	int main(void)
{

	float pg, pk;
	printf("\nDIGITE SEU PESO EM QUILOS\n");
	scanf("%f",&pk);
	pg= pk*1000;
	printf("\nSEU PESO EM GRAMAS É %f",pg);
	return 0;
}

