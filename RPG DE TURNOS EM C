//...................................................****FUNCAO FLORESTA****...........................................................................................................................
                        void floresta(){
   
                                                                                                            int contador=0;
                                                                                                            int acontecimento;
                                                                                                            while(contador<=5){
                                                                                                           
                                                                                                            acontecimento=rola_d10();
                                                                                                           
                                                                                                            if(acontecimento==1){
                                                                                                                printf(
                                                                                                                "\n\t\t\tVocê encontrou uma toca entre as raízes de uma árvore velha.\n\t\t\t Dentro dela havia uma poção verde que te pareceu útil \n ");
                                                                                                               
                                                                                                                getchar();
                                                                                                                system("clear");
                                                                                                               
                                                                                                            }
                                                                                                            else if(acontecimento==2){
                                                                                                                 printf("\t\t\t\nVocê encontrou um Lobo cinzento feroz\n");
                                                                                                                 lobo_cinza();
                                                                                                                 getchar();
                                                                                                                 system("clear");
                                                                                                               
                                                                                                            }
                                                                                                           
                                                                                                            else if(acontecimento==3){
                                                                                                                 printf("\n\t\t\tVocê encontrou um Elfo Selvagem \n");
                                                                                                                 lobo_cinza();
                                                                                                                 getchar();
                                                                                                                 system("clear");
                                                                                                               
                                                                                                            }
                                                                                                            else if(acontecimento==4){
                                                                                                                 printf("\n\t\t\tVocê encontrou uma Gigantesca aranha negra\n");
                                                                                                                 lobo_cinza();
                                                                                                                 getchar();
                                                                                                                 system("clear");
                                                                                                               
                                                                                                            }
                                                                                                            else if(acontecimento==5){
                                                                                                                 printf("\n\t\t\tVocê encontrou uma espada curta \n");
                                                                                                                 lobo_cinza();
                                                                                                                 getchar();
                                                                                                                 system("clear");
                                                                                                               
                                                                                                            }
                                                                                                            else if(acontecimento==6){
                                                                                                                 printf("\n\t\t\tVocê encontrou uma pequena cabana de madeira\n\t\t\tNela haviam pergaminhos velhos e você pegou um que lhe parecia útil\n");
                                                                                                                 lobo_cinza();
                                                                                                                 getchar();
                                                                                                                 system("clear");
                                                                                                               
                                                                                                            }
                                                                                                            else if(acontecimento==7){
                                                                                                                 printf("\n\t\t\tVocê encontrou uma ursa parda \n");
                                                                                                                 lobo_cinza();
                                                                                                                 getchar();
                                                                                                                 system("clear");
                                                                                                               
                                                                                                            }
                                                                                                            else if(acontecimento==8){
                                                                                                                 printf("\n\t\t\tVocê encontrou um arco de ganhos entrelaçados\n");
                                                                                                                 lobo_cinza();
                                                                                                                 getchar();
                                                                                                                 system("clear");
                                                                                                               
                                                                                                            }
                                                                                                            else if(acontecimento==9){
                                                                                                                 printf("\n\t\t\tVocê encontrou um machado de prata \n");
                                                                                                                 lobo_cinza();
                                                                                                                 getchar();
                                                                                                                 system("clear");
                                                                                                               
                                                                                                            }
                                                                                                            else if(acontecimento==10){
                                                                                                                 printf("\n\t\t\tVocê encontrou um ladrão da floresta que quer tomar seus bens\n");
                                                                                                                 lobo_cinza();
                                                                                                                 getchar();
                                                                                                                 system("clear");
                                                                                                               
                                                                                                            }
                                                                                                               
                                                                                                                contador++;
                                                                                                                printf("\n%i\n",contador);
                                                                                                                lobo_cinza();
                                                                                                                getchar();
                                                                                                                system("clear");
                                                                                                               
                                                                                                            }
                                                                                                           
                                                                                                          return;
                                                                                                           
                                                                                                        }


