#include <cstdio>
#include <cstdlib>
#include <cstring>


class no {

public:
int conteudo;
no * prox = NULL;
  
};

no * nova_lista_encadeada ( int n ) {
 no primeiro;
 no *p;
 no * novo_no;
 int i=0; 
  
 p=&primeiro;
 printf("digite o elemento do no %d\n",i);
 scanf("%d",&primeiro.conteudo);
 primeiro.prox=new(no); 
  
 novo_no=primeiro.prox;
  
  

  for(int i=1;i<n;i++){
    
    printf("digite o elemento do no %d\n",i);
    scanf("%d",&novo_no->conteudo);
    novo_no->prox=new(no);
  }
  return p ;
};


int main(){

no * p[3];
int n;
 
printf("digite o tamanho da lista que deseja criar\n");
scanf("%d",&n);

 p[0] = nova_lista_encadeada ( n );
 p[1] = nova_lista_encadeada ( n );
 p[2] = nova_lista_encadeada ( n );
 
  
 return 0;
}


